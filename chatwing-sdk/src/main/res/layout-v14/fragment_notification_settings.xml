<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_box"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/pushSwitch"
        android:layout_alignBottom="@+id/emailSwitch"
        android:layout_toLeftOf="@id/pushSwitch"/>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/push_notification"
        android:id="@+id/pushSwitch"
        android:layout_alignParentRight="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_notification"
        android:id="@+id/emailSwitch"
        android:layout_below="@id/pushSwitch"
        android:layout_alignParentRight="true"/>
</RelativeLayout>