<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chatwing.whitelabel"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        tools:replace="icon, label, theme"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ChatWing"
        android:name=".ChatWingApplication">
        <activity
            android:name="com.chatwingsdk.activities.CommunicationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LegacyLoginActivity"
            android:theme="@style/Theme.ChatWing"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.ChatWing"
            android:label="@string/title_activity_register" />
        <!-- FB 3.0 section -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/fb_app_id" />

        <activity android:name="com.facebook.LoginActivity" />
        <!-- End of Fb 3.0 section -->

    </application>

</manifest>
