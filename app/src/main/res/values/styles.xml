<resources>
    <style name="Theme.ChatWing" parent="Theme.ChatWing.Base">
    </style>
    <!-- Base application theme. -->
    <style name="Theme.ChatWing.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
            colorControlHighlight and colorSwitchThumbNormal. -->
    </style>
    <style name="Theme.ChatWing.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:paddingBottom">@dimen/drawer_item_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/drawer_item_drawable_padding</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/drawer_item_counter_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/drawer_item_counter_padding_left</item>
        <item name="android:paddingRight">@dimen/drawer_item_counter_padding_right</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Theme.ChatWing.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="ButtonChatWing" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemNavTitle" parent="Theme.ChatWing.DrawerItemTitle">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_ab_chatwing</item>
        <!--<item name="android:height">@dimen/abc_action_bar_default_height</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Theme.ChatWing.Background">
        <item name="clickableItemBackground">@android:drawable/list_selector_background</item>
    </style>

    <style name="Theme.ChatWing.VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/vertical_divider</item>
    </style>

    <style name="Theme.ChatWing.Button.Borderless" parent="@style/Widget.AppCompat.ActionButton"></style>

    <style name="Theme.ChatWing.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium
        </item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.ChatWing.Button.Toggle">
        <item name="android:background">@drawable/item_selector</item>
    </style>


    <style name="Theme.ChatWing.DrawerItemSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/drawer_item_drawable_padding</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

</resources>
