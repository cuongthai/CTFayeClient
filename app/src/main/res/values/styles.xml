<resources>

    <!-- Base application theme. -->
    <style name="Theme.ChatWing" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Theme.ChatWing.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.ChatWing.ActionBar</item>
        <item name="actionMenuTextColor">@color/text_color</item>
        <item name="android:actionMenuTextColor">@color/text_color</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicator</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:paddingTop">@dimen/drawer_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/drawer_item_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/drawer_item_drawable_padding</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/drawer_item_counter_height</item>
        <item name="android:layout_margin">@dimen/drawer_item_counter_margin</item>
        <item name="android:paddingLeft">@dimen/drawer_item_counter_padding_left</item>
        <item name="android:paddingRight">@dimen/drawer_item_counter_padding_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/primary_color</item>
    </style>

    <style name="Theme.ChatWing.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary_color</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/Theme.ChatWing.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Theme.ChatWing.ActionBar.TitleTextStyle</item>

    </style>
    <style name="Theme.ChatWing.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ButtonChatWing" parent="android:Widget.Button">
        <item name="android:background">@color/action_primary_color</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">@color/text_action_color</item>
    </style>

    <style name="Theme.ChatWing.DrawerItemNavTitle" parent="Theme.ChatWing.DrawerItemTitle">
        <item name="android:background">@color/action_primary_color</item>
        <item name="android:textColor">@color/text_action_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_ab_chatwing</item>
        <!--<item name="android:height">@dimen/abc_action_bar_default_height</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Theme.ChatWing.Background">
        <item name="clickableItemBackground">@android:drawable/list_selector_background</item>
    </style>

    <style name="Theme.ChatWing.VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/vertical_divider</item>
    </style>

    <style name="Theme.ChatWing.Button.Borderless" parent="@style/Widget.AppCompat.ActionButton"></style>

    <style name="Theme.ChatWing.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium
        </item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.ChatWing.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
    </style>


    <style name="Theme.ChatWing.DrawerItemSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/drawer_item_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/drawer_item_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">@dimen/drawer_item_drawable_padding</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

</resources>
