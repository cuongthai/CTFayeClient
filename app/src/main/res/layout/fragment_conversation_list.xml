<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/back"
                style="@style/Theme.ChatWing.DrawerItemNavTitle"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_action_back_dark"
                android:text="@string/title_back" />
            <ListView
                android:id="@+id/default_user_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back"
                android:listSelector="@drawable/item_selector" />
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:minHeight="300dp"
                android:layout_below="@+id/default_user_list"
                android:listSelector="@drawable/item_selector" />
        </RelativeLayout>


        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/empty_conversations"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </FrameLayout>

</LinearLayout>