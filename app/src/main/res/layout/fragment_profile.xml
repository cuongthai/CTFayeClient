<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile">

        <com.chatwing.whitelabel.views.RatioImageView
                android:id="@+id/profile_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:height_ratio="3"
                app:width_ratio="4"
                app:dot_view="true"/>

        <com.chatwing.whitelabel.views.RatioImageView
                android:id="@+id/profile_small_photo"
                android:layout_width="@dimen/profile_avatar_width"
                android:layout_height="@dimen/profile_avatar_width"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                android:layout_gravity="bottom"
                app:height_ratio="1"
                app:width_ratio="1"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/profile_name_bg_color">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:id="@+id/action_buttons">
                <ImageButton
                        android:id="@+id/profile_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_centerVertical="true"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:layout_toLeftOf="@id/action_buttons"
                    android:layout_marginLeft="@dimen/padding_medium"/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:orientation="vertical">

        <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>