<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingBottom="2dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="2dip">

    <ImageView
        android:id="@+id/login_type"
        android:layout_width="@dimen/chat_message_login_type_width"
        android:layout_height="@dimen/chat_message_login_type_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dip"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="@dimen/online_avatar_width"
        android:layout_height="@dimen/online_avatar_height"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:gravity="center_vertical"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
