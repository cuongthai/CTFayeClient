<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/login_type"
        android:layout_width="@dimen/chat_message_login_type_width"
        android:layout_height="@dimen/chat_message_login_type_height"
        android:scaleType="fitCenter" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="@dimen/chat_message_avatar_width"
        android:layout_height="@dimen/chat_message_avatar_height"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        android:lines="1" />
</LinearLayout>
